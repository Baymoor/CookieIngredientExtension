{
  "manifest_version": 3,
  "name": "Cookie Ingredient",
  "version": "1.1.0",
  "icons": {
    "16": "icons/cookieingredienticonpng.png",
    "48": "icons/cookieingredienticonpng.png",
    "128": "icons/cookieingredienticonpng.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/cookieingredienticonpng.png",
      "48": "icons/cookieingredienticonpng.png",
      "128": "icons/cookieingredienticonpng.png"
    }
  },
  "permissions": ["cookies", "tabs", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/content.js"]
    }
  ]
}
